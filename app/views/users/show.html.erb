<div class="row">
    <div class=" col-sm-8 col-sm-offset-2 col-md-3 col-md-offset-0">
        <%= image_tag @user.profile.avatar.url, class: ".user-show-avatar img-responsive" %>
    </div>
    <div class="col-sm-8 col-sm-offset-2 col-md-5 col-md-offset-0">
        <h1><%= @user.profile.full_name %></h1>
        <h3><spam class="job-title-icon"><%= job_title_icon %></spam><%= @user.profile.job_title %></h3>
        <div class="well profile-block profile-description">
            <h3>Description</h3>
            <%= @user.profile.description %>
        </div>
    <% if current_user.plan_id == 2 %>
        <div class="well profile-block profile-contact">
            <h3>Contact</h3>
            <%= @user.profile.phone_number %> </br>
            <%= @user.profile.contact_email %> </br>
        </div>
    <% end %>
    </div>


</div>