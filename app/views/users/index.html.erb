<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <ul class="list-unstyled">
            <% @user.each do |user| %>
                <% if user.profile %>
                    <li>
                        <div class=" well row <%= cycle('white-bg', '') %>">
                            <div class="col-md-4">
                            <%= link_to user do %>
                                <%= image_tag user.profile.avatar.url, class: "user-index-avatar img-responsive" %>
                            <% end %>
                            </div>
                            
                            <div class="col-md-8">
                                <%= link_to user do %>
                                    <h2><%= user.profile.full_name %></h2>
                                <% end %>
                                <% if user.plan_id == 2 %>
                                <p><%= user.profile.job_title %> <span class="label label-danger">PRO</span></p>
                                <% end %>
                            </div>
                        </div>
                    </li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>